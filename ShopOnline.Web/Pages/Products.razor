@page "/"
@using ShopOnline.Web.Componants

@if(AllProducts == null)
{
    <h3>Loading Products...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = AllProducts.Count();

    @if (productCount > 0)
    {
        @foreach (var productGroup in GetGroupedProductsByCategory())
            {
                <h4>@GetCategoryName(productGroup)</h4>       
                
                <div class="row mt-3">
                    <DisplayProducts Products="@productGroup" />
                </div>

                <hr class="mb-3"/>
            }
    }
}
